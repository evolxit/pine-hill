      columns={4}
      items={[
        {
          title: 'Phone',
          icon: 'tabler:phone',
          callToAction: {
            target: '_blank',
            text: '<span class="font-bold text-sm italic">Hotel</span><br/><span class="text-sm">+95-81-50079, 50303, 50304, <br/>+95-9-5113524, 8615992</span><br/> <span class="font-bold text-sm italic">Office</span><br/><span class="text-sm">+95-1-2304779, 2304780</span>',
            href: '#',
            variant: 'link',
          },
        },
        {
          title: 'Email',
          icon: 'tabler:mail',
          callToAction: {
            target: '_blank',
            text: '<span class="text-sm">pinehill.kalaw@gmail.com contact@myanmarpinehill.com</span>',
            href: '#',
            variant: 'link',
          },
        },
        {
          title: 'Fax',
          icon: 'tabler:printer',
